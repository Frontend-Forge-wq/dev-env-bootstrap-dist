{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "final_space": true,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "path",
          "style": "powerline",
          "foreground": "#FFFFFF",
          "background": "#7C4DFF",
          "properties": {
            "style": "folder",
            "folder_separator_icon": "",
            "home_icon": "~"
          },
          "template": "  {{ .Path | foldername }} "
        },
        {
          "type": "git",
          "style": "powerline",
          "foreground": "#1B1F23",
          "background": "#00BCD4",
          "properties": {
            "fetch_status": true,
            "branch_icon": "",
            "display_status": true,
            "display_stash_count": false,
            "display_upstream_icon": false
          },
          "template": " {{ .Branch }}{{ if .Working.Status }} {{ .Working.Status }}{{ end }} "
        }
      ]
    }
  ]
}